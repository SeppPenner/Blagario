@page "/"
@inherits BaseIndex

<div 
    class="universe" 
    style="@Universe.CssStyle(Eyeglass)"
    @onmousemove="@TrackMouse"
>
    <div 
        class="world" 
        style="@Universe.World.CssStyle(Eyeglass)"
    >
        @foreach (var element in VisibleElements )
        {
            <div class="@element.CssClass"
                style="@element.CssStyle(Eyeglass)">
            </div>
        }
    </div>
</div>
